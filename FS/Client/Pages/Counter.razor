@page "/counter"

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
<DownloadComponent FileUrl="https://tempstrorageaccount.blob.core.windows.net/usercontainer/1.txt"></DownloadComponent>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
